!!!5
html
  head
    title NGN APL
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    style

      @font-face {
        font-family: 'blah';
        font-style: normal;
        font-weight: 400;
        src:
          local('blah'),
          url(http://themes.googleusercontent.com/static/fonts/permanentmarker/v2/9vYsg5VgPHKK8SXYbf3sMupm9E4gBdgiUiSJePew_SQ.woff)
          format('woff');
      }

      body {
        padding: 0;
        margin: 0;
      }

      h1 {
        font-family: 'blah', serif;
        font-size: 50px;
      }

      #editor {
        cursor: text;
        padding: 10px;
      }

      #footer {
        background-color: black;
        padding: 5px;
        position: fixed;
        bottom: 0;
        width: 100%;
      }

      .button {
        border: solid #555 3px;
        border-color: #555 #bbb #bbb #555;
        margin-right: 3px;
        cursor: pointer;
      }

    // APL core
    script(src='../web/examples.js')
    script(src='../web/fake-exports.js')
    script(src='../lib/helpers.js')
    script(src='../lib/parser.js')
    script(src='../lib/builtins.js')
    script(src='../lib/complex.js')
    script(src='../lib/compiler.js')
    script(src='../lib/browser.js')

    // jQuery
    script(src='jq/jquery-1.7.2.min.js')

    // Editor scripts
    script(src='index.js')

  body
    h1 NGN APL
    #editor(data-role='content')
      img#cursor(src='images/cursor.png')
    #footer
      #syms
      a#backspace.button(href="#", data-role="button", data-icon="delete") Backspace
      a#exec.button(href="#", data-role="button", data-icon="check") Exec
      a#enter.button(href="#", data-role="button", data-icon="") Enter
